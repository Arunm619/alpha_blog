<h1>Listing all Articles </h1>

<% if @articles.empty? %>

 <h1> oops no articles </h1>
	<%end%>


<%= link_to 'create new article',new_article_path %>



<% @articles.each do |a|%>
<ul>
<li>

<p>

Title :	<%= a.title %> <br>
Description : <%= a.description %> <br>

Created By : <%= a.user.username if a.user %>  , <%=   time_ago_in_words(a.created_at ) %>  last updated at  <%= time_ago_in_words(a.updated_at)  %>>

<%= link_to 'edit',edit_article_path(a) %>
||
<%= link_to 'show',article_path(a) %>
||

<%= link_to 'delete',article_path(a) , method: :delete  , data: {confirm: 'Are you sure?'} %>

<br>


</p>

</li>
</ul>
<% end %>	